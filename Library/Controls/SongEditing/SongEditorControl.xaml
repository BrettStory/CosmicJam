<UserControl x:Class="CosmicJam.Library.Controls.SongEditing.SongEditorControl"
             x:Name="_songEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:monoGameControls="clr-namespace:Macabre2D.Wpf.MonoGameIntegration;assembly=Macabre2D.Wpf.MonoGameIntegration">
    <Grid DataContext="{Binding ElementName=_songEditorControl}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <monoGameControls:MonoGameContentControl Grid.Row="0"
                                                 DataContext="{Binding SongEditor}" />
    </Grid>
</UserControl>